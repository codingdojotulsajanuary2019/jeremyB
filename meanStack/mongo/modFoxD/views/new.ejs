<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Fox Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="orange accent-3" style="padding:10px">
    <div class="card" style="width:50%; padding:10px">
        <div class="row">
            <div class="row">
                <div class="col s6">
                    <h4>Add a new fox!</h4>
                </div>
                <div class="col offset-s3" style="margin-top:10px;">
                    <a href="/" class="btn waves-effect waves-light">to Dash!</a>
                </div>
            </div>
                <% if(typeof(errors) != 'undefined' ) { %>
                    <span style="color: red">Something went wrong</span>
                    <% for (var x in errors) { %>
                        <% console.log(errors[x].message) %>
                     <p><%= errors[x].message %></p>
                    <% } %>
                <% } %>
            <form action="/foxes" method="POST" class="col s12">
                <div class="row">
                    <div class="input-field col s9">
                        <input id="name" name="name" type="text">
                        <label for="name">Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s9">
                        <input id="age" name="age" type="text">
                        <label for="age">Age</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s9">
                        <input id="food" name="food" type="text">
                        <label for="food">Favorite Food</label>
                    </div>
                </div>
                <div class="col s5">
                    <button type="submit" class="btn">Add Fox!</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>