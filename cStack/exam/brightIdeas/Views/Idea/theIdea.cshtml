@model Idea
<div class="container">
    <div class="section has-background-primary">
        <div class="navbar is-primary">
            <div class="level">
                <div class="level-left">
                    <div class="level-item">
                        <h1 class="title">Take a closer look!</h1>
                    </div>
                </div>
                <div class="level-right offset-right spacer">
                    <div class="level-item ">
                        <a href="/ideas" class="spacer">Bright Ideas</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section has-background-dark">
        <div class="box">
            <div class="columns is-vcentered">
                <div class="column is-2">
                    <p><a href="/user/@Model.creator.UserId">@Model.creator.Alias</a> says:</p>
                </div>
                <div class="column">
                    <p class="idea">@Model.content</p>
                </div>
            </div>
            <div class="section">
                <div class="columns is-centered">
                    <div class="column is-half is-centered">
                        <p>People who liked this post:</p>
                        <table class="table is-bordered is-fullwidth is-striped">
                            <thead>
                                <tr>
                                    <th>Alias</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var like in @Model.likes)
                                {
                                    <tr>
                                        <td>@like.theUser.Alias</td>
                                        <td>@like.theUser.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div