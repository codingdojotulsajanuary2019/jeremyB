@model User
<div class="container has-background-dark">
    <div class="columns is-centered has-background-primary">
        <div class="column is-half">
            <div class="level">
                <h1 class="title has-text-dark">Registration</h1>
                <h2><a href="/login">Login</a></h2>
            </div>
        </div>
    </div>
    <div class="columns is-centered">
        <div class="column is-half">
            <div class="box">
                <form asp-action="Register" asp-controller="Home"  method="post">
                        <div class="columns">
                            <div class="column">
                                <div class="field">
                                    <span asp-validation-for="fName" class="has-text-danger is-size-7"></span>
                                    <label asp-for="fName" class="label">First Name</label>
                                    <input asp-for="fName" class="input">
                                </div>
                                <div class="field">
                                    <span asp-validation-for="lName"  class="has-text-danger is-size-7"></span>
                                    <label asp-for="lName" class="label">Last Name</label>
                                    <input asp-for="lName" class="input">
                                </div>
                                <div class="field">
                                    <span asp-validation-for="Email"  class="has-text-danger is-size-7"></span>
                                    <label asp-for="Email" class="label">Email</label>
                                    <input asp-for="Email" class="input">
                                </div>
                            </div>
                            <div class="column">
                                <div class="field">
                                    <span asp-validation-for="Password"  class="has-text-danger is-size-7"></span>
                                    <label asp-for="Password" class="label">Password</label>
                                    <input asp-for="Password" class="input">
                                </div>
                                <div class="field">
                                    <span asp-validation-for="Confirm" class="has-text-danger is-size-7"></span>
                                    <label asp-for="Confirm" class="label">Confirm Password</label>
                                    <input asp-for="Confirm" class="input">
                                </div>
                                <div class="field">
                                    <button type="submit" class="button is-primary">Sign up Now!</button>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>